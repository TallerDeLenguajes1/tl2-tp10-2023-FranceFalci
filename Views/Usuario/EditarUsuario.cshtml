@model EditarUsuarioViewModel

<form asp-controller="Usuario" asp-action="EditarUsuario"
  onsubmit="return confirmarEdicion(event, 'usuario', '@Model.NombreUsuario');">
  <input hidden asp-for="@Model.Id">
  <div class="form-group">
    <label asp-for="@Model.NombreUsuario"></label>
    <input asp-for="@Model.NombreUsuario" class="form-control" />
    <span asp-validation-for="@Model.NombreUsuario" class="text-danger"></span>


  </div>
  <div class="form-group">
    <label asp-for="@Model.Rol"></label>
    <select asp-for="@Model.Rol" class="form-control">
      @foreach (var rol in Enum.GetValues(typeof(rol)))
      {
        <option value="@rol">@rol</option>
      }
    </select>
  </div>

  <button type="submit">Enviar</button>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
